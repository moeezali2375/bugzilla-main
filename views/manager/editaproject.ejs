<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <title>Manager</title>
  <link rel="canonical" href="css/">
  <link href="/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <link href="/css/cover.css" rel="stylesheet">

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>


</head>
<!-- ! NAVBAR -->

<body class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
      <div class="inner">
        <h3 class="masthead-brand">
          <img src="/icons/bug.png" class="brand-icon" alt="image">
          BUGZILLA
        </h3>
        <nav class="nav nav-masthead justify-content-center">
          <a class="nav-link active" href="/manager/home">Home</a>
          <a class="nav-link active" href="/logout">Log Out</a>
        </nav>
      </div>
    </header>
    <!-- ! MAIN -->
    <h3 class="cover-heading">Edit your project</h3>
    <form action="/manager/editaproject/<%= project._id %>" method="post">
      <div class="form-group">
        <label for="projectName">
          <h5><%=project.project_name%></h5>
        </label>
        <input type="text" class="form-control" name="project_name" placeholder="Enter the new name">
      </div>
      <!-- //TODO Devs -->
      <br>
      <label>
        <h5>Add Developers</h5>
      </label>
      <%  for(let i =0;i<developers.length;i++){%>
      <label class="form-check form-check-custom form-check-solid">
        <input class="form-check-input" type="checkbox" name="projectdev" value="<%= developers[i].id%>" />
        <span class="form-check-label">
          <%=developers[i].name %>
        </span>
      </label>
      <% } %>
      <!-- //TODO Qas -->
      <br>
      <label>
        <h5>Add QA</h5>
      </label>
      <%  for(let i =0;i<qas.length;i++){%>
      <label class="form-check form-check-custom form-check-solid">
        <input class="form-check-input" type="checkbox" name="projectqa" value="<%= qas[i].id%>" />
        <span class="form-check-label">
          <%=qas[i].name %>
        </span>
      </label>
      <% } %>

      <!-- Add more form fields as needed -->
      <br><button type="submit" class="signup-button">Submit</button> <br><br>
    </form>
    <a href="/manager/editaproject/removedevqas/<%= project._id %>">
      <button class="signup-button">Remove Devs/Qas</button>
    </a>
    <!-- ! FOOTER -->
    <footer class="mastfoot mt-auto">
      <div class="inner">
        <p>Coded by Ikhlaq Ahmad Makki</p>
      </div>
    </footer>
  </div>
</body>

</html>
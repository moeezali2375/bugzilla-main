<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <title>QA</title>
  <link rel="canonical" href="css/">
  <link href="/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <link href="/css/cover.css" rel="stylesheet">

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>


</head>
<!-- ! NAVBAR -->

<body class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
      <div class="inner">
        <h3 class="masthead-brand">
          <img src="/icons/bug.png" class="brand-icon" alt="image">
          BUGZILLA
        </h3>
        <nav class="nav nav-masthead justify-content-center">
          <a class="nav-link active" href="/qa/home">Home</a>
          <a class="nav-link active" href="/logout">Log Out</a>
        </nav>
      </div>
    </header>
    <!-- ! MAIN -->
    <h3 class="cover-heading">Report a bug</h3> <br> <br>
    <form action="/qa/reportbug/<%=projectId%>" method="post">
      <div class="form-group">
        <input type="title" name="bug_title" placeholder="Bug title" required>
      </div>


      <div class="description">
        <input type="description" name="bug_description" placeholder="Description">
      </div>


      <div class="form-group">
        <label for="Type">Type:</label>
        <select id="Type" name="bug_type" required>
          <option value="feature">Feature</option>
          <option value="bug">Bug</option>
        </select>
      </div>


      <div class="date-input">
        <label for="Type">Deadline:</label>
        <input type="date" name="bug_date" required>
      </div>

      <div class="form-group">
        <label for="Status">Status:</label>
        <select id="status" name="bug_status" required>
          <option value="new">New</option>
          <option value="started">Started</option>
          <option value="completed">Resolved</option>
        </select>
      </div>
      <!-- Add more form fields as needed -->
      <button type="submit" class="signup-button">Submit</button> <br><br>
    </form>
    <!-- ! FOOTER -->
    <footer class="mastfoot mt-auto">
      <div class="inner">
        <p>Coded by Ikhlaq Ahmad Makki</p>
      </div>
    </footer>
  </div>
</body>

</html>